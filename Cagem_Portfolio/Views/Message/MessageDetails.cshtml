@model Cagem_Portfolio.Models.Entities.TblMessage
@{
    ViewBag.Title = "MessageDetails";
    Layout = "~/Views/Shared/_PortfolioAdminLayout.cshtml";
}

<h2>Mesaj Detayları</h2>

<div class="card card-primary card-outline">
    <div class="accordion-header">
        Konu:@Html.DisplayFor(x => x.MessageSubject)
    </div>
    <br />
    <div class="">
        Gönderen:@Html.DisplayFor(x => x.NameSurname)
    </div>
    <br />
    Mail Adresi:@Html.DisplayFor(x => x.SenderMail)
    <br />
    Mesaj:@Html.DisplayFor(x => x.content)

</div>